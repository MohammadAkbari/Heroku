@model AddPostVm
@{
    ViewData["Title"] = $"Add Post";
}

<form method="post">
    <div class="form-group row">
        <label asp-for="BlogId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="BlogId" asp-items="Model.BlogIdNames" class="form-control">
                <option>Select ...</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Content" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Content" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>