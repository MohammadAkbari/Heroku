@model Blog
@{
    ViewData["Title"] = $"Blog {Model.Name}";
}

<a asp-action="AddPost">Add Post</a>

<table>
    @foreach (var item in Model.Posts)
    {
        <tr>
            <td>@item.PostId</td>
            <td>@item.CreatedOn</td>
            <td>@item.Number</td>
            <td>
                @item.Content
            </td>
        </tr>
    }
</table>